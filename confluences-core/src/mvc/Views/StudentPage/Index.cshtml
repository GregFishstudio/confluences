                                <div class="card-body p-0">
                                    <h3 class="title">Mes formatrices et Mes formateurs </h3>
                                    <div class="row">
                                        @foreach (var sessionTeacher in Model.SessionStudents.First().Session.SessionTeachers.OrderBy(s => s.Order))
                                        {
