@model mvc.Models.SchoolClassRoom

@{
    ViewData["Title"] = Model.SchoolClassRoomName;
}
<partial name="_NotificationTeacherPrivate.cshtml" />
<br />
<br />
<br />
<br />
<body data-parallax="true" class="bgImage">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            @if (Model.Sessions.Count() > 0)
                            {
                                @*<h4 class="card-title">@Model.SchoolClassRoomName Session @Model.Sessions.FirstOrDefault().SessionNumberId @Model.Sessions.FirstOrDefault().DateStart.Year</h4>*@
                                <h4 class="card-title">@Model.SchoolClassRoomName</h4>
                            }
                            else
                            {
                                <h4 class="card-title">@Model.SchoolClassRoomName</h4>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="text-center">
                            @if (Model.Sessions.Count() > 0)
                            {
                                <button class="btn btn-primary"
                                        onclick="window.location.href='@Url.Action("Index", "HomeworkV2s")?id=' + encodeURIComponent('@Model.Sessions.FirstOrDefault().SessionId')">
                                    Devoirs
                                </button>
                            }
                            <button class="btn btn-primary" onclick="window.open('@Url.Action("Index", "Jitsi", new { roomName = Model.SchoolClassRoomId, isPrivateRoom = false})', '_blank')" type="button">Démarrer visio conférence</button>
                            <div class="clearfix"></div>
                        </div>
                        @if (Model.Sessions.Count() > 0)
                        {
                            <div id="accordion" role="tablist" aria-multiselectable="true" class="card-collapse">
                                @foreach (Session session in Model.Sessions.OrderByDescending(s => s.DateStart))
                                {
                                    <div class="row">
                                        @*<div style="display: inline;">
                                                <a class="btn btn-primary" asp-controller="HomeworkV2s" asp-action="Index" asp-route-id="@session.SessionId">Devoirs</a>
                                            </div>*@

                                        <div class="col-md-3 border-right border-dark">
                                            <h3 class="text-center">Les formateur-trices</h3>
                                            <div class="text-center">
                                                <a asp-controller="SessionTeachers" asp-action="Create" asp-route-id="@session.SessionId">Ajouter</a>
                                            </div>
                                            <br />
                                            <div class="row">
                                                @foreach (SessionTeacher sessionTeacher in session.SessionTeachers.OrderBy(s => s.Order))
                                                {
                                                    <div class="col mx-auto text-center">
                                                        @if (sessionTeacher.Teacher.PathImage != null)
                                                        {
                                                            <img class="img-fluid" src="@(ViewData["URLAPI"] + sessionTeacher.Teacher.PathImage)" alt="@sessionTeacher.Teacher.Firstname @sessionTeacher.Teacher.LastName" style="max-height: 100px;" /><br />
                                                        }
                                                        else
                                                        {
                                                            <img class="img-fluid" src="~/img/avatar.jpg" alt="@sessionTeacher.Teacher.Firstname @sessionTeacher.Teacher.LastName" style="max-height: 100px;" /><br />
                                                        }
                                                        <a style="color:black;font-size:1.0625rem;" asp-controller="AspNetUsers" asp-action="Details" asp-route-id="@sessionTeacher.Teacher.Id">
                                                            <h4 class="title m-3"><i data-userconnected="@sessionTeacher.Teacher.UserName" class="userconnected fa fa-circle text-secondary"></i> @sessionTeacher.Teacher.Firstname @sessionTeacher.Teacher.LastName</h4>
                                                        </a>
                                                        <br />

                                                        <a data-userConnected="@sessionTeacher.Teacher.UserName" href="@Url.Action("Private", "Jitsi", new { roomName = sessionTeacher.Teacher.UserName, isPrivateRoom = true})" class="callButton callUnAvailable"><img style="margin: auto; width: 100px;" src="@(ViewData["BASEMVC"] + "img/Conference.png")" /></a>
                                                        <a class="text-danger" style="font-size:0.8rem" asp-controller="SessionTeachers" asp-action="Delete" asp-route-id="@sessionTeacher.SessionId" asp-route-id2="@sessionTeacher.Teacher.Id">Supprimer</a>
                                                    </div>
                                                }
                                            </div>
                                            <br />
                                        </div>
                                        <div class="col-md-9">
                                            <h3 class="text-center">Les participant-e-s</h3>
                                            <div class="text-center">
                                                <a asp-controller="SessionStudents" asp-action="Create" asp-route-id="@session.SessionId">Ajouter</a>
                                            </div>
                                            <br />
                                            <div class="row">
                                                @foreach (SessionStudent sessionStudent in session.SessionStudents.OrderBy(s => s.Student.Firstname))
                                                {
                                                    <div class="col-md-2 mx-auto text-center">
                                                        @if (sessionStudent.Student.PathImage != null)
                                                        {
                                                            <img class="img-fluid" src="@(ViewData["URLAPI"] + sessionStudent.Student.PathImage)" alt="@sessionStudent.Student.Firstname @sessionStudent.Student.LastName" style="max-height: 100px;" /><br />
                                                        }
                                                        else
                                                        {
                                                            <img class="img-fluid" src="~/img/avatar.jpg" alt="@sessionStudent.Student.Firstname @sessionStudent.Student.LastName" style="max-height: 100px;" /><br />
                                                        }
                                                        <a style="color:black;font-size:1.0625rem;" asp-controller="AspNetUsers" asp-action="Details" asp-route-id="@sessionStudent.Student.Id">
                                                            <h4 class="title m-3"><i data-userconnected="@sessionStudent.Student.UserName" class="userconnected fa fa-circle text-secondary"></i> @sessionStudent.Student.Firstname @sessionStudent.Student.LastName</h4>
                                                        </a>
                                                        <br />

                                                        <a data-userConnected="@sessionStudent.Student.UserName" href="@Url.Action("Private", "Jitsi", new { roomName = sessionStudent.Student.UserName, isPrivateRoom = true})" class="callButton callUnAvailable"><img style="margin: auto; width: 100px;" src="@(ViewData["BASEMVC"] + "img/Conference.png")" /></a>
                                                        <a class="text-danger" style="font-size:0.8rem" asp-controller="SessionStudents" asp-action="Delete" asp-route-id="@sessionStudent.SessionId" asp-route-id2="@sessionStudent.Student.Id">Supprimer</a>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        <div class="text-center">
                            <h4>
                                <a class="text-success" asp-controller="Sessions" asp-action="Create" asp-route-schoolClassRoomId="@Model.SchoolClassRoomId">Créer une session</a>
                                @if (Model.Sessions.Count() > 0)
                                {
                                    WriteLiteral("|");
                                    <a class="text-danger" asp-controller="Sessions" asp-action="Delete" asp-route-id="@Model.Sessions.FirstOrDefault().SessionId" asp-route-schoolClassRoomId="@Model.Sessions.FirstOrDefault().SchoolClassRoomId">Supprimer la session</a>
                                }
                            </h4>
                        </div>
                        <div class="text-center">
                            <a asp-action="Edit" asp-route-id="@Model.SchoolClassRoomId">
                                Gérer le tuto
                            </a> |
                            <a asp-controller="SchoolClassRoomExplanations" asp-action="Index" asp-route-id="@Model.SchoolClassRoomId">Gérer les explications audios (langues)</a>|
                            <a asp-controller="SchoolClassRooms" asp-action="aide" asp-route-id="@Model.SchoolClassRoomId">Rénitialiser le "J'ai compris"</a>|
                            <a id="Archived" class="text-danger">Archiver la classe</a>
                        </div>
                        <div class="text-center">
                            <a class="btn btn-primary" asp-action="Index">Retourner à la liste</a>
                        </div>
                        <partial name="../Chat/Chat.cshtml" />
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
        </div>
    </div>
</body>

@section Scripts {
    <script>

        let $messages = document.getElementsByClassName("messages-content"),
            d, h, m,
            i = 0;

        function updateScrollbar() {
            // Get the messages content element
            var messagesContent = document.querySelector(".messages-content");

            // Update the scrollbar
            messagesContent.scrollTop = messagesContent.scrollHeight;
        }

        function setDate() {
            d = new Date()
            if (m != d.getMinutes()) {
                m = d.getMinutes();
                var timestampDiv = document.createElement("div");
                timestampDiv.className = "timestamp";
                var timestamp = d.getHours() + ':' + (m < 10 ? '0' : '') + m;
                timestampDiv.textContent = timestamp;

                // Find the last message element
                var lastMessage = document.querySelector('.message:last-child');

                // Append the timestamp div to the last message element
                lastMessage.appendChild(timestampDiv);
            }
        }

        function sendMessageToHub() {
            connection.on("ReceiveMessage", function (user, message) {
                const messagesList = document.getElementById("messagesList");
                const listItem = document.createElement("li");
                listItem.textContent = `${user}: ${message}`;
                messagesList.appendChild(listItem);
            });
        }


        function insertMessage() {
            msg = document.getElementById('messageInput').value;
            var userName = '@(ViewData["CurrentUserName"])';
            if ($.trim(msg) == '') {
                return false;
            }

            // Create a new div element for the message
            var newMessageDiv = document.createElement("div");
            newMessageDiv.className = "message message-personal new";
            newMessageDiv.textContent = msg;

            // Find the messages content container
            var messagesContent = document.querySelector(".messages-content");

            // Append the new message div to the messages content container
            messagesContent.appendChild(newMessageDiv);

            setDate();
            document.getElementById('messageInput').value = null;

            $.ajax({
                type: "POST",
                url: "/Chat/SendMessageToClassRoom",
                data: { message: msg, userName: userName },
                success: function (data) {
                  
                    console.log("SUCCESS SEND MESSAGE");
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            })
            updateScrollbar();
        }



        function fakeMessage() {
            if (document.getElementsByClassName("message-input").value != '') {
                return false;
            }
            
            updateScrollbar();

            setTimeout(function () {
                $('.message.loading').remove();
                setDate();
                updateScrollbar();
                i++;
            }, 1000 + (Math.random() * 20) * 100);

        }

        connection.on("SendStudentMessage", function (message) {
            console.log('CHATMESSAGE' + message);

            updateScrollbar();

            if ($.trim(message) == '') {
                return false;
            }

            // Create a new div element for the message
            var newMessageDiv = document.createElement("div");
            newMessageDiv.className = "message message-personal new";
            newMessageDiv.textContent = message;
            newMessageDiv.style.background = "linear-gradient(120deg, #0b0db7, #00c5fb)";

            // Find the messages content container
            var messagesContent = document.querySelector(".messages-content");

            // Append the new message div to the messages content container
            messagesContent.appendChild(newMessageDiv);

            setDate();
            document.getElementById('messageInput').value = null;

            /*setTimeout(function () {

                var loadingMessage = document.querySelector('.message.loading');
                if (loadingMessage) {
                    loadingMessage.parentNode.removeChild(loadingMessage);
                }

                setDate();

                updateScrollbar();

                i++;
            }, 1000 + (Math.random() * 20) * 100);*()*/
        });

        document.getElementById("Archived").onclick = function () {
            if (confirm('Attention ! Pour désarchiver il faudra passer par le webmaster, êtes-vous sûr de vouloir continuer ?')) {
                // Save it!
                location.href='@Url.Action("archive", "SchoolClassRooms", new { id = Model.SchoolClassRoomId })'
            } else {
                // Do nothing!
                console.log('Thing was not saved to the server.');
            }
        };

    </script>
}